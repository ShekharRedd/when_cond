pipeline {
  agent any
  environment{
      env.BRANCH_NAME="main"
    stages{
            stage("build")
                {
                  when{
                    expression{
                      env.BRANCH_NAME=='main'
                    }
                  }
                  steps 
                    { 
                       echo "hello world"
                    }
                }
            stage("deplov")
                { 
                  steps
                     { 
                     
                     sh ' git branch '
                     sh ' ${env.BRANCH_NAME}'
                     
                     
                     echo "deploy successfully"
                     }
                }
    }
}
