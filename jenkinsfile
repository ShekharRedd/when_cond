
pipeline {
  agent any
  parameters{
    choice(name:'VERSION',choices:['1.2.1','1.2.2','1.2.3'],description:'')
    booleanParam(name:'exeuteTests',defaultValue:true,description:'')
  }
    stages{
      stage("build")
        {
          when{
            expression{
              params.exeuteTests
            }
          }
          steps 
            { 
              echo "hello world"
            }
        }
      stage("deplov")
        { 
          steps
              { echo "deploy successfully"
              echo "deploy vrson is ${VERSION}"
              }

        }
  }


  }


